{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["go.opentelemetry.io"],
      "groupName": "OTEL Packages"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "helmUpdateSubChartArchives"
  ]
}
