{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "copyKeys": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            },
            "pullPolicy": {
              "type": "string"
            }
          }
        },
        "deployment": {
          "type": "object",
          "properties": {
            "annotations": {
              "type": "object"
            },
            "extraLabels": {
              "type": "object"
            },
            "replicas": {
              "type": "integer"
            },
            "containerUserID": {
              "type": "integer"
            },
            "imagePullSecrets": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "config": {
          "type": "object",
          "properties": {
            "server": {
              "type": "object",
              "properties": {
                "ip": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                }
              }
            },
            "otel": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "provider": {
                  "type": "string"
                },
                "stdout": {
                  "type": "object",
                  "properties": {
                    "prettyPrint": {
                      "type": "boolean"
                    }
                  }
                },
                "otlp": {
                  "type": "object",
                  "properties": {
                    "endpoint": {
                      "type": "string"
                    },
                    "insecure": {
                      "type": "boolean"
                    }
                  }
                }
              }
            },
            "storage": {
              "type": "object",
              "properties": {
                "migrateOnInit": {
                  "type": "boolean"
                },
                "crdb": {
                  "type": "object",
                  "properties": {
                    "caSecretName": {
                      "type": "string"
                    },
                    "uriSecretName": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "oauth": {
              "type": "object",
              "properties": {
                "issuer": {
                  "type": "string"
                },
                "accessTokenLifespan": {
                  "type": "integer"
                },
                "secretName": {
                  "type": "string"
                },
                "keys": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "keyID": {
                        "type": "string"
                      },
                      "path": {
                        "type": "string"
                      },
                      "algorithm": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "audit": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "component": {
                  "type": "string"
                }
              }
            }
          }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "className": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "hosts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "pathType": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tls": {
                    "type": "array"
                }
            }
        },
        "serviceMonitor": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        }
    }
}
